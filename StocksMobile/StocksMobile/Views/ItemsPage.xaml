<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:i18n="clr-namespace:StocksMobile.Services;assembly=StocksMobile" 
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             x:Class="StocksMobile.Views.ItemsPage">
    <ContentPage.Content>
        <StackLayout Margin="20">
            <Label x:Name="StockNameLabel" FontSize="Large" Margin="0,0,0,10" />
            <Button Text="{i18n:Translate remove}" Margin="0,0,0,10" Clicked="RemoveStock" x:Name="RemoveButton" />
            <Button Text="{i18n:Translate additem}" Margin="0,0,0,10" Clicked="AddItem" />
            <Grid x:Name="ItemsGrid">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
            </Grid>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>