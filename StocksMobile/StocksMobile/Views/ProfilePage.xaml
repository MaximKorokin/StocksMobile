<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:i18n="clr-namespace:StocksMobile.Services;assembly=StocksMobile" 
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             x:Class="StocksMobile.Views.ProfilePage">
    <ContentPage.Content>
        <StackLayout Margin="10">
            <Label Text="{i18n:Translate profile}" FontSize="Large" />
            <Label x:Name="NameLabel" />
            <Button Text="{i18n:Translate logout}" Clicked="Logout" />
            <Button Text="{i18n:Translate edit}" Clicked="Edit" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>