<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:i18n="clr-namespace:StocksMobile.Services;assembly=StocksMobile" 
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             x:Class="StocksMobile.Views.ItemHistoryPage">
    <ContentPage.Content>
        <StackLayout Margin="10" x:Name="StatesStack">
            <Label Grid.Row="0" Grid.ColumnSpan="2" x:Name="ItemNameLabel" HorizontalOptions="Center" FontSize="Large" Margin="0,0,0,10" />
            <Button Text="{i18n:Translate remove}" Margin="0,0,0,10" Clicked="RemoveItem" x:Name="RemoveButton" />
            <Grid x:Name="StatesGrid">
            </Grid>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>